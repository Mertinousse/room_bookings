
<div class="row">


    <% @bookings.each do |b| %>

    <div class="col-sm-6 col-md-4 col-lg-3">
    <% if (Date.today <=> b.end) == 1 %>
      <div class="card text-center bg-secondary mt-4">
    <% elsif (Date.today <=> b.start) >= 0 %>
      <div class="card text-center bg-success mt-4">
    <% else %>
      <div class="card text-center bg-primary mt-4">
    <% end %>
      <div class="card-header">
        <h5><%=b.id%></h5>
      </div>

      <div class="card-body">

      <p>Room: <%=b.room.number%></p>
      <p>Start: <%=b.start%></p>
      <p>End: <%=b.end%></p>
      <%= link_to "edit", edit_booking_path(b), class: "btn btn-warning" %>
      <%= link_to "delete", booking_path(b), method: :delete,
          data: { confirm: "Are you sure you want to delete this booking?" },
          class: "btn btn-danger" %>

      </div>
    </div>
    </div>

    <% end %>


    <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
      <%= link_to "+", new_booking_path, id: "add-btn", name: "new-booking", class: "btn btn-block btn-primary" %>
    </div>
</div>

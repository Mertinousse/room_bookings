
<%= render "shared/errors", obj: @booking %>

<div class="row justify-content-center">
<div class="col-sm-8 col-lg-6 mt-4">


<%= form_for @booking do |f| %>
  <div class="form-group row">
    <%= f.label :room, class: "col-sm-2 col-form-label" %>
    <div class="col sm-6">
      <%= f.collection_select(:room_id, Room.all, :id, :number), class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :start, class: "col-sm-2 col-form-label" %>
    <div class="col sm-6">
      <%= f.date_field :start, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :end, class: "col-sm-2 col-form-label" %>
    <div class="col sm-6">
      <%= f.date_field :end, class: "form-control" %>
    </div>
  </div>
  <div class="btn-holder">
    <%= f.submit class: "btn btn-primary mt-4" %>
  </div>
<% end %>

<div class="btn-holder">
  <%= link_to "Back", bookings_path, class: "btn btn-secondary mt-4" %>
</div>

</div>
</div>
